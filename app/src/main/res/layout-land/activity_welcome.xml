<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="50dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.tile.janv.userinterface1.WelcomeActivity"
    android:stretchColumns="*">
    <TableRow>
        <Button
            android:id="@+id/button_option_continue"
            android:text="@string/option_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickButtonContinue"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/button_option_new_game"
            android:text="@string/option_new_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" />
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/button_option_about"
            android:text="@string/option_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/button_option_exit"
            android:text="@string/option_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"/>
    </TableRow>
</TableLayout >
